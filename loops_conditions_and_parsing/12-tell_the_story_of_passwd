#!/usr/bin/env bash
# This script displays information about users from /etc/passwd using a while loop and IFS

# Specify the path to the /etc/passwd file
passwd_file="/etc/passwd"

# Check if the file exists
if [ -e "$passwd_file" ]; then
    # Use while loop to read each line of the file
    while IFS=: read -r username _ userid groupid _ home_directory shell; do
        # Generate and display the fictional story
        echo "The user USERNAME is part of the GROUP_ID gang, lives in HOME_DIRECTORY and rides COMMAND/SHELL."
        echo "USER ID's place is protected by the passcode PASSWORD, more info about the user here: USER ID INFO"
        echo
    done < "$passwd_file"
else
    echo "Error: /etc/passwd file not found."
fi
